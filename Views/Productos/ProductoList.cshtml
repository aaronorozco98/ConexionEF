@model List<ProductoModel>

<h1>Tipos de Productos</h1>

<a class = "btn btn primary" asp-action="ProductoAdd" asp-controller="Producto">Agregar Producto</a>

<table class="table">
    <thead>
        <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Acciones</th>
        </tr>
       
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.Nombre</td>
                <td>@m.Descripcion</td>
                <td>
                    <a class = "btn btn-secundary" 
                    asp-action="ProductoEdit" 
                    asp-controller="Producto" 
                    asp-route-id="@m.Id">Editar</a>

                    <a class = "btn btn-secundary" 
                    asp-action="ProductoDelete" 
                    asp-controller="Producto" 
                    asp-route-id="@m.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>